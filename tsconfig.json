{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2024",
    "moduleResolution": "Node",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}